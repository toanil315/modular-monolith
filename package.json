{
  "name": "modular-monolith",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "npx typeorm-ts-node-commonjs",

    "migration:generate:events": "npm run typeorm -- migration:generate ./src/modules/events/infrastructure/database/migrations/$npm_config_name -d ./src/modules/events/infrastructure/database/datasource.ts",
    "migration:run:events": "npm run typeorm -- migration:run -d ./src/modules/events/infrastructure/database/datasource.ts",
    "migration:rollback:events": "npm run typeorm -- migration:revert -d ./src/modules/events/infrastructure/database/datasource.ts",

    "migration:generate:users": "npm run typeorm -- migration:generate ./src/modules/users/infrastructure/database/migrations/$npm_config_name -d ./src/modules/users/infrastructure/database/datasource.ts",
    "migration:run:users": "npm run typeorm -- migration:run -d ./src/modules/users/infrastructure/database/datasource.ts",
    "migration:rollback:users": "npm run typeorm -- migration:revert -d ./src/modules/users/infrastructure/database/datasource.ts",

    "migration:generate:ticketing": "npm run typeorm -- migration:generate ./src/modules/ticketing/infrastructure/database/migrations/$npm_config_name -d ./src/modules/ticketing/infrastructure/database/datasource.ts",
    "migration:run:ticketing": "npm run typeorm -- migration:run -d ./src/modules/ticketing/infrastructure/database/datasource.ts",
    "migration:rollback:ticketing": "npm run typeorm -- migration:revert -d ./src/modules/ticketing/infrastructure/database/datasource.ts",
    
    "migration:run:all": "npm run migration:run:events && npm run migration:run:users && npm run migration:run:ticketing",
    "migration:rollback:all": "npm run migration:rollback:events && npm run migration:rollback:users && npm run migration:rollback:ticketing"
  },
  "dependencies": {
    "@keyv/redis": "^5.1.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.12.2",
    "cache-manager": "^7.2.0",
    "dotenv": "^17.2.2",
    "keycloak-connect": "^26.1.1",
    "nest-keycloak-connect": "^1.10.1",
    "nestjs-zod": "^5.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.26",
    "ulid": "^3.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
